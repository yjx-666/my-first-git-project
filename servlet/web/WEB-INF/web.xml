<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

<!--    context-param是上下文参数，属于整个工程-->
    <context-param>
        <param-name>username</param-name>
        <param-value>context</param-value>
    </context-param>

    <context-param>
        <param-name>password</param-name>
        <param-value>root</param-value>
    </context-param>

<!--    <servlet>标签给Tomcat配置servlet程序-->
    <servlet>
        <!--        <servlet-name>标签给servlet程序起一个别名，一般是类名-->
        <servlet-name>HelloServlet</servlet-name>
        <servlet-class>com.yjx.servlet.HelloServlet</servlet-class>
<!--        <servlet-class>标签给servlet程序的全类名-->
<!--        初始化参数，是一个键值对-->
        <init-param>
<!--            参数名-->
            <param-name>username</param-name>
<!--            参数值-->
            <param-value>root</param-value>
        </init-param>

        <init-param>
            <param-name>tomcat-url</param-name>
            <param-value>http://localhost:8080</param-value>
        </init-param>
    </servlet>

    <!--        <servlet-mapping>标签给servlet程序配置访问地址-->
    <servlet-mapping>
        <!--        <servlet-name>标签告诉服务器我当前的地址给哪个servlet程序用-->
        <servlet-name>HelloServlet</servlet-name>
<!--        <url-pattern>标签配置访问地址-->
        <url-pattern>/hello</url-pattern>
        <!--
           /斜杠在服务器解析的时候，表示地址为：http://ip:端口/工程路径
           /hello表示地址为：http://ip:端口/工程路径/hello
           工程路径即为Deployment里所配置的Applicat context,为index.jsp设置默认的url
           输入http://ip:端口/工程路径/hello时，服务端返回被调用的相应信息
        -->
    </servlet-mapping>


    <!--    <servlet>标签给Tomcat配置servlet程序-->
    <servlet>
        <servlet-name>HelloServlet2</servlet-name>
        <servlet-class>com.yjx.servlet.HelloServlet2</servlet-class>
    </servlet>

    <servlet>
        <servlet-name>HelloServlet3</servlet-name>
        <servlet-class>com.yjx.servlet.HelloServlet3</servlet-class>
    </servlet>
    
    <servlet>
        <servlet-name>ContextServlet</servlet-name>
        <servlet-class>com.yjx.servlet.ContextServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ContextServlet1</servlet-name>
        <servlet-class>com.yjx.servlet.ContextServlet1</servlet-class>
    </servlet>

    <!--    设置访问地址-->
    <servlet-mapping>
        <servlet-name>HelloServlet2</servlet-name>
        <url-pattern>/hello2</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>HelloServlet3</servlet-name>
        <url-pattern>/hello3</url-pattern>
    </servlet-mapping>
    
    <servlet-mapping>
        <servlet-name>ContextServlet</servlet-name>
        <url-pattern>/context</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>ContextServlet1</servlet-name>
        <url-pattern>/context1</url-pattern>
    </servlet-mapping>
</web-app>